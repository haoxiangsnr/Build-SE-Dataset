{
    "dist": "./lps_dist",
    "random_seed": 111,
    "sampling_rate": 16000,
    "dataset": [
        {
            "name": "train",
            "clean": {
                "database": "./data/clean/data/lisa/data/timit/raw/TIMIT/TRAIN",
                "min_sampling": 16384,
                "ext": "WAV",
                "recurse": true,
                "limit": 400,
                "offset": 0
            },
            "noise": {
                "database": "./data/noise",
                "types": [
                    "factoryfloor1",
                    "factoryfloor2",
                    "destroyerengine",
                    "destroyerops",
                    "machinegun",
                    "m109",
                    "babble"
                ]
            },
            "snr": [
                0, -5, -10, -15
            ]
        },
        {
            "name": "test",
            "clean": {
                "database": "./data/clean/data/lisa/data/timit/raw/TIMIT/TEST",
                "min_sampling": 0,
                "ext": "WAV",
                "recurse": true,
                "limit": 50,
                "offset": 0
            },
            "noise": {
                "database": "./data/noise",
                "types": [
                    "factoryfloor1",
                    "factoryfloor2",
                    "destroyerengine",
                    "destroyerops",
                    "machinegun",
                    "m109",
                    "babble",
                    "f16",
                    "leopard"
                ]
            },
            "snr": [
                0, -3, -5, -7, -10, -12, -15, -17,-20
            ]
        }
    ]
}
